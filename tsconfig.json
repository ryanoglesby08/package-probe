{
  "compilerOptions": {
    // "esModuleInterop": true,
    // "moduleResolution": "node",

    // "strictNullChecks": true,
    // "target": "es5"

    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "outDir": "./bin/"
  },
  "include": ["./src/"]
}

